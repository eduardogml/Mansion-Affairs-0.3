# game/story_scripts/day6_alex.rpy:95
translate italian day6_alex_1_10d31fe9:

    # v "Yes, we were discussing a little outing. I invited Alex to join us for the photoshoot later."
    v "Sì, stavamo parlando di una piccola gita. Ho invitato Alex a unirsi a noi per il servizio fotografico più tardi."

# game/story_scripts/day6_alex.rpy:96
translate italian day6_alex_1_a35e2344:

    # "{i}Isabella blinked, the words clearly catching her off guard.{/i}"
    "{i}Isabella sbatté le palpebre, le parole la colsero chiaramente di sorpresa.{/i}"

# game/story_scripts/day6_alex.rpy:98
translate italian day6_alex_1_4954441a:

    # isa "You?"
    isa "Voi?"

# game/story_scripts/day6_alex.rpy:99
translate italian day6_alex_1_20d7afe0:

    # a "Why not? I’ve got some time to kill, and it sounds... interesting."
    a "Perché no? Ho un po' di tempo da ammazzare e sembra... interessante."

# game/story_scripts/day6_alex.rpy:100
translate italian day6_alex_1_244fa8e4:

    # isa "Interesting?"
    isa "Interessante?"

# game/story_scripts/day6_alex.rpy:101
